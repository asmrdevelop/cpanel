[% WRAPPER 'master_templates/master.tmpl' theme="yui", app_key='edit_a_package' -%]
<style>
.pkg_select {
    width: 100%;
    overflow:auto;
}
</style>
<div id="content">

[% IF !data.packages_list.size -%]
<p style="margin-left:20px">[% locale.maketext('You have no packages set up. You may add one by selecting “[output,url,_1,Add a Package]” from the navigation menu.','addpkg2') %]</p>
[% ELSE -%]
<form action="../scripts/editpkg2" name="fmain">

<div class="form_action">
<fieldset>
<ul>
    <li>
        <div class="fields">
            <label for="pkg_select" class="fixed">[% locale.maketext('Package') %]</label>
                <select class="pkg_select" size="7" name="pkg">
[% FOR pkg = data.packages_list -%]
                    <option value="[% pkg FILTER html %]">[% pkg FILTER html %]</option>
[% END -%]
                </select>
        </div>
    </li>
</ul>
</fieldset>
</div>


<input type="submit" id="submit" value="[% locale.maketext('Edit') %]" name="submit-domain" class="btn-primary" />

</form>
[% END -%]

</div>
[% END #wrapper -%]
