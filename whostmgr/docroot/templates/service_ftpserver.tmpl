            <ul>
                <li>
                    [% locale.maketext('Ideal for memory-constrained systems.') %]
                </li>
                <li>
                    [% locale.maketext('Does not support TLS 1.0.') %]
                </li>
           </ul>
        </td>


    </tr>
    <tr>
        <td>
            <input type="radio" name="ftpserver" id="ftpserver_disabled" value="disabled" [% IF data.ftpserver == 'Disabled' %]checked[% END %]>
            <label for="ftpserver_disabled">[% locale.maketext('Disabled') %]</label>
        </td>
        <td style="text-align:left;" valign="top">&nbsp;</td>
