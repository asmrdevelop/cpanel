<script>

EVENT.on('toggleErrorDetailsLink', 'click', function(){
    if( DOM.hasClass('errorDetailsWrapper', 'hidden') ) {
        DOM.removeClass('errorDetailsWrapper', 'hidden');
        DOM.get('toggleErrorDetailsLink').innerHTML = "[% locale.maketext('Click to hide details.') %]";

    } else {
        DOM.addClass('errorDetailsWrapper', 'hidden');
        DOM.get('toggleErrorDetailsLink').innerHTML = "[% locale.maketext('Click to see more details.') %]";
    }
});

</script>
