<style>
table {
    border-collapse: collapse;
    border: 1px dotted #ccc;
}
</style>

[% IF !data.status %]
<p class="redstatus">&nbsp;&nbsp;Certificate signing request generation failed: [% data.message %]</p>
[% ELSE %]
[% IF !data.email_status %]
<p class="redstatus">&nbsp;&nbsp;[% data.email_message %]</p>
[% ELSE %]
<p>&nbsp;&nbsp;[% data.email_message %]</p>
[% END %]
<div>
<table>
    <tr>
        <th>Signing Request</th>
    </tr>
    <tr>
        <td><textarea rows="15" cols="70" readonly>[% data.csr %]</textarea></td>
    </tr>
[% IF data.cert %]
    <tr>
        <th>Certificate</th>
    </tr>
    <tr>
        <td><textarea rows="25" cols="70" readonly>[% data.cert %]</textarea></td>
    </tr>
[% END %]
    <tr>
        <th>Key</th>
    </tr>
    <tr>
        <td><textarea rows="18" cols="70" readonly>[% data.key %]</textarea></td>
    </tr>
</table>
</div>
[% END %]
