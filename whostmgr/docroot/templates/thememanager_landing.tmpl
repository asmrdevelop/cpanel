<table border="0" cellpadding="20" cellspacing="0">
    <tr>
            <td class="app">
                <div class="appimg">
                    <img src="/images/cpanel.png" align="absmclassdle">
                </div>
                <div class="appname">Default cPanel Themes</div>
                <div class="appmanage">
                    <a href="[% cp_security_token %]/scripts6/customization">
                        [% locale.maketext("Customize Themes") %]
                    </a>
                </div>
            </td>
    [% FOR app IN data.apps %]
            <td class="app">
                <div class="appimg">
                    <img src="/images/[% app.value.image %]" alt="[% app.value.imgdescription %]">
                </div>
                <div class="appname">
                    [% app.value.name %]
                </div>
                <div class="appmanage">
                    <a href="[% cp_security_token %]/scripts/thememanager?app=[% app.key %]">
                        [% locale.maketext("Manage Themes") %]
                    </a>
                </div>
            </td>
    [% END %]
    </tr>
</table>

