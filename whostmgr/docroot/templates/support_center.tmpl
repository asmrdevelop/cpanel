[% IF Whostmgr.hasroot() %]
<h2>
    [% locale.maketext('Contact [asis,cPanel]') %]
</h2>
<div class="section">
    <div class="subSection">
        [%# <a href="../scripts7/create_support_ticket"> -%]
        <div class="supportContent">
            <!-- sub-section image -->
            <div class="supportImage">
                <a href="../scripts7/create_support_ticket"
                    title="[% locale.maketext('Submit a Support Request') %]">
                    <img src="[% MagicRevision('/themes/x/icons/support_center.png')%]"
                        class="sectionImage" alt="[% locale.maketext('Contact [asis,cPanel]') %]"/>
                </a>
            </div>
            <div class="supportInfo">
                <a href="../scripts7/create_support_ticket"
                    class="supportSubSectionHeading">
                    [% locale.maketext('Submit a Support Request') %]
                </a>
                <span class="sectionDescription">
                    [% locale.maketext('Contact the makers of [asis,cPanel amp() WHM].') %]
                </span>
            </div>
        </div>
        <div class="additionalInformation">
            [% locale.maketext('You may need your Server IP Address and Support Access ID to obtain support.') %]
            <span id="serverIP">
                [% locale.maketext('Server IP Address: [_1]', data.ip) %]
            </span>
            <span id="supportNumber">
                [% locale.maketext('Support Access ID: [_1]', data.supportid) %]
            </span>
            <span id="contactVendor">
                [%locale.maketext('Contact your license vendor for support before you contact [asis,cPanel].') %]
            </span>
        </div>
    </div>
    <hr class="separator"/>
    <div class="subSection">
        <div class="supportContent">
            <!-- sub-section image -->
            <div class="supportImage">
                <a href="[% cp_security_token %]/scripts7/authorizesupport"
                    title="[% locale.maketext('Grant [asis,cPanel] Support Access') %]">
                    <img src="[% MagicRevision('/themes/x/icons/grant_cpanel_support_access.png') %]" class="sectionImage" alt="[% locale.maketext('Grant [asis,cPanel] Support Access') %]"/>
                </a>
            </div>
            <div class="supportInfo">
                <a href="[% cp_security_token %]/scripts7/authorizesupport" class="supportSubSectionHeading" title="[% locale.maketext('Grant [asis,cPanel] Support Access') %]">
                    [% locale.maketext('Grant [asis,cPanel] Support Access') %]
                </a>
                <span class='sectionDescription'>
                    [% locale.maketext('Manage [asis,cPanel] support’s access to your server.') %]
                </span>
            </div>
        </div>
