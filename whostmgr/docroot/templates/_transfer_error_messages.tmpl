        <div id="error_messages" class="hidden">
            <div class="alert alert-danger">
                <span class="glyphicon glyphicon-remove-sign"></span>
                <div class="alert-message">
                    <span id="errorDetailsMessage">{{error_message}} </span>
                    <a href="javascript:void(0)" id="toggleErrorDetailsLink">[% locale.maketext('Click to see more details.') %]</a>
                    <ul class="hidden" id="errorDetailsWrapper">
                    {{#each errors}}
                        <li>
                            {{this}}
                        </li>
                    {{/each}}
                    </ul>
                </div>
            </div>
        </div>

