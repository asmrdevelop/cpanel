[% USE date %]

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    [% IF businessName.length %]
    <title>[% businessName | html %]</title>
    [% END %]

    <!-- Bootstrap Core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="css/business-casual.css" rel="stylesheet">

    <!-- Fonts -->
    <link href="font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="//fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css">
    <link href="//fonts.googleapis.com/css?family=Josefin+Slab:100,300,400,600,700,100italic,300italic,400italic,600italic,700italic" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

    [% IF businessName.length %]
    <div class="brand">[% businessName | html %]</div>
    [% END %]

    [% IF physicalAddress.length OR phoneNumber.length %]
    <div class="address-bar"> [% physicalAddress | html %] | [% phoneNumber | html %]</div>
    [% END %]

    <div class="container">

        <div class="row">
            <div class="box">
                <div class="col-lg-12 text-center">
                    <img class="img-responsive img-full" src="img/office.jpg" alt="">
                    [% IF businessName.length %]
                    <h2 class="brand-before">
                        <small>Welcome to</small>
                    </h2>
                    <h1 class="brand-name">[% businessName | html %]</h1>
                    [% END %]
                    [% IF tagLine.length %]
                    <hr class="tagline-divider">
                    <h2>
                        <small>
                            <strong>[% tagLine | html %]</strong>
                        </small>
                    </h2>
                    [% END %]
                </div>
            </div>
        </div>

        [% IF descriptionSectionHeader.length OR description.length %]
        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    [% IF descriptionSectionHeader.length %]
                    <hr>
                    <h2 class="intro-text text-center">
                        [% descriptionSectionHeader | html %]
                    </h2>
                    <hr>
                    <hr class="visible-xs">
                    [% END %]
                    [% IF description.length %]
                    <p>[% description | html %]</p>
                    [% END %]
                </div>
            </div>
        </div>
        [% END %]

        [% IF googleMapsURL.length OR phoneNumber.length OR emailAddress.length OR physicalAddress.length OR faxNumber.length%]
        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    [% IF businessName.length %]
                    <hr>
                    <h2 class="intro-text text-center">Contact
                        <strong>[% businessName | html %]</strong>
                    </h2>
                    <hr>
                    [% END %]
                </div>
                [% IF googleMapsURL.length %]
                <div class="col-lg-12">
                    <!-- Embedded Google Map using an iframe - to select your location find it on Google maps and paste the link as the iframe src. If you want to use the Google Maps API instead then have at it! -->
                    <iframe width="100%" height="400" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="[% googleMapsURL | url %]"></iframe>
                </div>
                [% END %]
                [% IF phoneNumber.length OR emailAddress.length OR physicalAddress.length OR faxNumber.length OR businessHours.length OR businessHoursNotes.length %]
                <div class="col-lg-12">
                    [% IF physicalAddress.length %]
                    <p>
                        Address: <strong>[% physicalAddress | html %]</strong>
                    </p>
                    [% END %]

                    [% IF phoneNumber.length OR emailAddress.length OR faxNumber.length OR businessHours.length OR businessHoursNotes.length %]
                    <p>
                        [% IF phoneNumber.length %]
                            Phone: <strong>[% phoneNumber | html %]</strong> <br/>
                        [% END %]

                        [% IF faxNumber.length %]
                            Fax Number: <strong>[% faxNumber | html %]</strong> <br/>
                        [% END %]

                        [% IF emailAddress.length %]
                            Email: <strong><a href="mailto:[% emailAddress | uri %]">[% emailAddress %]</a></strong> <br/>
                        [% END %]

                        [% IF businessHours.length %]
                            Business Hours: <strong>[% businessHours | html %]</strong> <br/>
                        [% END %]

                        [% IF businessHoursNotes.length %]
                            <strong>[% businessHoursNotes | html %]</strong><br/>
                        [% END %]
                    </p>
                    [% END %]
                </div>
                [% END %]
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    [% END %]

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    [% IF linkedinLink.length OR twitterLink.length OR facebookLink.length %]
                    <ul class="icons">
                        [% IF twitterLink.length %]
                        <li><a href="[% twitterLink | url %]" class="fa fa-twitter" title="Twitter" target="_blank"></a></li>
                        [% END %]
                        [% IF facebookLink.length %]
                        <li><a href="[% facebookLink | url %]" class="fa fa-facebook" title="Facebook" target="_blank"></a></li>
                        [% END %]
                        [% IF linkedinLink.length %]
                        <li><a href="[% linkedinLink | url %]" class="fa fa-linkedin" title="LinkedIn" target="_blank"></a></li>
                        [% END %]
                    </ul>
                    [% END %]
                    [% IF businessName.length %]
                    <div class="copyright">Copyright &copy; [% businessName | html %] [% date.format(date.now, '%Y') %]</div>
                    [% END %]
                </div>
            </div>
        </div>
    </footer>

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

    [% IF google_analytics_key.length %]
    <script type="text/javascript">

      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', '[% google_analytics_key | html %]']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script');
        ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0];
        s.parentNode.insertBefore(ga, s);
      })();

    </script>
    [% END %]

    <script type="application/ld+json">
    {
      "@context" : "http://schema.org",
      "@type" : "Organization",

      [% IF businessName.length %]
      "name" : [% businessName.json() %],
      [% END %]

      [% IF domain_url.length %]
      "url" : [% domain_url.json() %],
      [% END %]

      [% IF facebookLink.length OR twitterLink.length OR linkedinLink.length %]
      "sameAs" : [
          [%- IF facebookLink.length; %] [% facebookLink.json(); %], [% END; -%]
          [%- IF twitterLink.length; %] [% twitterLink.json(); %], [% END; -%]
          [%- IF linkedinLink.length; %] [% linkedinLink.json(); %], [% END; -%]
        ]
      [% END %]

      [% IF phoneNumber.length %]
      "contactPoint" : [{
        "@type" : "ContactPoint",
        "telephone" : [% phoneNumber.json() %],
        "contactType" : "customer service"
      }]
      [% END %]
    }
</script>

</body>

</html>
