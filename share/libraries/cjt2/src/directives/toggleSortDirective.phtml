<a class="sort-link" ng-click="sort(sortValue)" href="javascript:void(0)">
    <span ng-transclude></span>
    <span ng-hide="sortMeta.sortBy !== sortField">
        <i ng-class="{true: 'icon-arrow-up', false: 'icon-arrow-down'}[getDir() == 'asc']"
           ng-attr-title="{{ getTitle() }}"></i>
    </span>
</a>