<form name="theForm" id="theForm">
    <input type="text" id="theText" name="theText" ng-model="mytext" required ng-pattern="/^[A-Za-z]+$/">
    <ul validation-container field-name="theText" role="alert">
        <li validation-item field-name="theText" validation-name="required" id="valTextRequired">
            Please enter some text
        </li>
        <li validation-item field-name="theText" validation-name="pattern" id="valTextPattern">
           Should only be alphabets
        </li>
    </ul>
</form>

