CREATE TABLE requests (

    -- indexed
    domain_set_name text primary key,
    username        text,

    -- not indexed
    csr             text,
    key             text,
    order_item_id   text,
    request_time    text,   -- ISO string
    last_poll_time  text,   -- ISO string
    dcv_methods     text not null default '',
    domain_set_type text not null default '',

    -- automatically created â€¦ a cache of the CSR domains
    domains         text
);

CREATE INDEX username_index ON requests (username);
