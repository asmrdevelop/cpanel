[%
    PROCESS "include/colors.tmpl";
    PROCESS "include/styles.tmpl";

    WRAPPER 'wrapper/main.html.tmpl'
        font_style          = font_style,
        NOTICE.email_reason = CPANEL.locale.maketext('Welcome to [_1]!', NOTICE.domain);
%]

<p>
    <p>[% CPANEL.locale.maketext('Your new account username is “[_1]”.', NOTICE.user) %]</p>
</p>

<p>
    [% CPANEL.locale.maketext('[output,strong,Note:] You can set the password for this account at the following URL: [output,url,_1,_1,target,_2]',NOTICE.change_password_url,'_blank') %]
</p>

