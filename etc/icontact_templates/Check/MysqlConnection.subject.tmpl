[% IF NOTICE.action == "reset_pass_successful" %]
    [% CPANEL.locale.maketext('[asis,MySQL]/[asis,MariaDB] server access restored.'); %]
[% ELSIF NOTICE.action == "reset_pass_failed" %]
  [% CPANEL.locale.maketext('[asis,MySQL]/[asis,MariaDB] authentication failed, and the system could not reset the [asis,MySQL]/[asis,MariaDB] [asis,root] password'); %]
[% ELSIF NOTICE.action == "cannot_reset_remote_pass" %]
  [% CPANEL.locale.maketext('[asis,MySQL]/[asis,MariaDB] authentication failed. The system could not reset the remote [asis,MySQL]/[asis,MariaDB] [asis,root] password') %]
[%
  ELSE
  # unknown_error
%]
  [% CPANEL.locale.maketext('The system could not connect to the [asis,MySQL]/[asis,MariaDB] server because of an unknown error.'); %]
[% END %]
