use strict;
use Cpanel::Config::LoadCpConf ();

if ( !@ARGV ) {
    die "No configuration parameter specified\n";
}

my $conf_ref = Cpanel::Config::LoadCpConf::loadcpconf();

my $item = $ARGV[0];

if ( exists $conf_ref->{$item} && defined $conf_ref->{$item} ) {
    print $conf_ref->{$item};
}
