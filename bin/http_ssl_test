use Cpanel::ConfigFiles::Apache ();
use Cpanel::Env                 ();
use Cpanel::Rlimit              ();

my $apacheconf = Cpanel::ConfigFiles::Apache->new();

Cpanel::Env::clean_env();
Cpanel::Rlimit::set_rlimit_to_infinity();

exec $apacheconf->bin_httpd(), '-DSSL', '-t', '-f', $ARGV[0];
