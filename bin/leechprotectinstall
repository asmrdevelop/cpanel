package bin::leechprotectinstall;

use strict;
use warnings;

use Cpanel::LeechProtect::DB ();

my $force = @ARGV && grep( /^--force$/, @ARGV ) ? 1 : 0;

__PACKAGE__->script($force) unless caller();

sub script {
    my ($force) = @_;

    eval { Cpanel::LeechProtect::DB->new->initialize_db($force); };

    # leechprotect is built into ea4 so no need to modify httpd.conf
    return;
}

1;
