use strict;
use warnings;
use Cpanel::ConfigFiles::Apache::modules ();
use Cpanel::OpenSSL                      ();

my $apache_version = Cpanel::ConfigFiles::Apache::modules::apache_long_version();

if ($apache_version) {
    print "apache_version:$apache_version\n";
}

my $openssl = Cpanel::OpenSSL->new( 'extended' => 1 );
if ( defined $openssl ) {
    if ( $openssl->{'version'} ) {
        print "openssl_version:$openssl->{'version'}\n";
    }
}
