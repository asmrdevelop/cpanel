import sys

sys.path.insert(0, '/usr/local/cpanel/lib/python2')

import cPanel

MAX_PICKLE_FILE_SIZE = 1024 * 1024 * 32


def main(argv):
    if len(argv) < 3:
        print 'usage: safe_dump_pickle_as_json <file> <sysuser>'
        return 1

    filename = argv[1]
    sysuser = argv[2]

    sys.stdout.write(cPanel.export_pickle_as_json(filename, sysuser, MAX_PICKLE_FILE_SIZE))


if __name__ == '__main__':
    raise SystemExit(main(sys.argv))
